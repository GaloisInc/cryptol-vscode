{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Cryptol",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#types"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#operators"
		}

	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cryptol",
					"match": "\\b(if|where|then|else)\\b"
				},
				{
					"name": "keyword.other.cryptol",
					"match" : "\\b(type|module)\\b"
				}
			]
		},
		"types":{
			"patterns": [
				{
					"name": "storage.type.cryptol",
					"match": "\\b(fin)\\b"
				},
				{
					"name": "storage.type.cryptol",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"operators" : {
			"patterns": [
				{
					"name": "keyword.operator.cryptol",
					"match": "(<-|->|>>>|<-|=|==|>|<<<|:|\\.\\.\\.|\\.\\.|\\^|\\^\\^|<|%|&&|\\-|\\+|@|@@|\\#|\\*)"
				}
			]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.numeric.cryptol",
					"match": "\\b\\d+\\b"
				},
				{
					"name": "constant.numeric.cryptol",
					"match": "\\b0[xX][0-9a-fA-F]+\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.cryptol",
					"match": "\/\/+.*"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.cryptol",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cryptol",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.cryptol"
}